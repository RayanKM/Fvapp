<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#527A74"
            android:paddingBottom="60dp"
            android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6">

                        <ImageView
                            android:id="@+id/background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="centerCrop"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/fade"/>
                        <ImageView
                            android:id="@+id/more"
                            android:layout_margin="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/moree"
                            android:layout_gravity="end"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_gravity="bottom">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/location"/>
                                <TextView
                                    android:id="@+id/location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="20dp"
                                    android:gravity="center_vertical"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/title"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/description"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"                                    android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#C1FFFFFF"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textSize="14dp"
                            android:gravity="center_vertical"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/date"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    android:gravity="start"/>
                                <TextView
                                    android:id="@+id/time"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    android:gravity="end"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="20dp"
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:layout_gravity="end"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/shape">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/calendar"/>
                                <TextView
                                    android:id="@+id/status"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#D32C40"
                                    android:textSize="24dp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:visibility="visible"
            app:cardCornerRadius="25dp"
            android:id="@+id/sheet3"
            app:cardElevation="11dp"
            android:backgroundTint="@color/white"
            android:layout_width="match_parent"
            android:translationY="20dp"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/line"/>
                        </LinearLayout>
                        <com.google.android.material.bottomnavigation.BottomNavigationView
                            android:id="@+id/bottomNavigationView"
                            android:layout_width="match_parent"
                            android:background="@color/white"
                            style="@style/Widget.MaterialComponents.BottomNavigationView.PrimarySurface"
                            app:itemIconTint="@color/selector4"
                            app:itemTextColor="@color/selector4"
                            android:layout_height="wrap_content"
                            app:menu="@menu/nav4"/>
                        <LinearLayout
                            android:id="@+id/postview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                                <androidx.cardview.widget.CardView
                                    android:layout_margin="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_gravity="center"
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            style="@style/BgStyle"
                                            android:layout_height="match_parent">
                                                <com.google.android.material.textfield.TextInputLayout
                                                    android:id="@+id/commentEditTextLayout"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    app:hintEnabled="false"
                                                    app:hintAnimationEnabled="true">

                                                        <EditText
                                                            android:id="@+id/posttext"
                                                            android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:minHeight="100dp"
                                                            android:hint="Your thoughts about the event"
                                                            style="@style/TextViewStyle"
                                                            android:inputType="textMultiLine|textAutoCorrect"
                                                            android:minLines="1"
                                                            android:maxLines="6"
                                                            android:scrollbars="vertical"
                                                            android:background="@android:color/transparent"
                                                            android:padding="8dp"
                                                            android:textSize="14sp" />

                                                        <!-- Add Send Button -->

                                                </com.google.android.material.textfield.TextInputLayout>
                                                <com.google.android.exoplayer2.ui.PlayerView
                                                    android:visibility="gone"
                                                    android:id="@+id/playerView"
                                                    android:layout_margin="10dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="200dp"
                                                    app:use_controller="true" />

                                                <ImageView
                                                    android:id="@+id/main"
                                                    android:visibility="gone"
                                                    android:layout_margin="10dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="200dp"
                                                    android:layout_gravity="left"
                                                    />
                                        </LinearLayout>


                                </androidx.cardview.widget.CardView>
                                <LinearLayout
                                    android:layout_marginLeft="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:orientation="horizontal">
                                        <ImageView
                                            android:id="@+id/addimg"
                                            android:layout_margin="10dp"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/addimg"
                                            />
                                        <ImageView
                                            android:id="@+id/addvid"
                                            android:layout_margin="10dp"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center_vertical"
                                            android:src="@drawable/addvid"
                                            />
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:gravity="end"
                                            android:layout_height="match_parent">
                                                <androidx.appcompat.widget.AppCompatButton
                                                    android:id="@+id/publish"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical|end"
                                                    android:layout_marginHorizontal="16dp"
                                                    android:backgroundTint="#0073FF"
                                                    android:text="Publish"
                                                    android:textColor="@color/white"
                                                    android:textStyle="bold"/>
                                        </LinearLayout>
                                </LinearLayout>
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#CBCBCB"/>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/mainRecyclerview"
                                    tools:listitem="@layout/posts"
                                    android:layout_marginTop="40dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/albumview"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                                    android:id="@+id/swiper"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/mainRecyclerview2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                        </LinearLayout>

                </LinearLayout>
        </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
