<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BgStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchProfile">
    <LinearLayout
        android:layout_width="match_parent"
        style="@style/BgStyle"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#CDCDCD"
            android:orientation="horizontal"
            android:layout_height="50dp">
            <androidx.appcompat.widget.SearchView
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/srchv"
                style="@style/TextViewStyle"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:defaultQueryHint="Search"
                app:iconifiedByDefault="false"
                app:queryHint="Search Profile" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/horizlayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRecyclerview2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                tools:listitem="@layout/rounded"
                style="@style/BgStyle"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/searchList"
            android:visibility="gone"
            android:orientation="vertical"
            style="@style/BgStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRecyclerview"
                android:layout_width="match_parent"
                style="@style/BgStyle"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                style="@style/BgStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/openMoments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Moments"
                    android:layout_margin="10dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#DDDA4703"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:id="@+id/m1"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="8dp">
                            <ImageView
                                android:id="@+id/img1"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:id="@+id/img1t"
                                android:visibility="gone"
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/vtype"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/m2"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="8dp">
                            <ImageView
                                android:id="@+id/img2"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:id="@+id/img2t"
                                android:visibility="gone"
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/vtype"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/m3"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="8dp">
                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:id="@+id/img3t"
                                android:visibility="gone"
                                android:layout_margin="5dp"
                                android:layout_gravity="end"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/vtype"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:orientation="vertical"
                style="@style/BgStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/openEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:layout_margin="10dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#DDDA4703"/>
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/addEvent"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shape3"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginStart="5dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/add"/>
                            <TextView
                                android:layout_marginStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Event"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                android:fontFamily="@font/helvetica_regular"
                                android:gravity="center"/>
                        </LinearLayout>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/e1"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="11dp">
                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/eventBackground"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:cardElevation="0dp"
                                    app:cardCornerRadius="8dp"
                                    android:layout_gravity="end"
                                    android:layout_margin="5dp">
                                    <TextView
                                        android:id="@+id/eventDate"
                                        android:layout_margin="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColor="@color/black"
                                        android:text=""
                                        android:autoSizeTextType="uniform"/>

                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:id="@+id/eventName"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:text="Event name"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:maxLines="1"/>
                                <TextView
                                    android:id="@+id/eventTime"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="11:30"
                                    android:textSize="16dp"/>
                            </LinearLayout>

                            <FrameLayout
                                android:id="@+id/pvst"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/imgf"
                                    android:scaleType="centerCrop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:id="@+id/eventNamepv"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:text="Event name"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:maxLines="1"/>
                                <ImageView
                                    android:layout_margin="30dp"
                                    android:layout_gravity="top"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/lock"/>
                            </FrameLayout>

                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/e2"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="11dp">
                            <LinearLayout
                                android:visibility="visible"
                                android:id="@+id/eventBackground2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:cardCornerRadius="8dp"
                                    app:cardElevation="0dp"
                                    android:layout_gravity="end"
                                    android:layout_margin="5dp">
                                    <TextView
                                        android:id="@+id/eventDate2"
                                        android:layout_margin="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:textColor="@color/black"
                                        android:text=""
                                        android:autoSizeTextType="uniform"/>

                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:id="@+id/eventName2"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:text="Event name"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:textSize="20dp"
                                    android:maxLines="1"/>
                                <TextView
                                    android:id="@+id/eventTime2"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="11:30"
                                    android:textSize="16dp"/>
                            </LinearLayout>

                            <FrameLayout
                                android:id="@+id/pvst2"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/imgf2"
                                    android:scaleType="centerCrop"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:id="@+id/eventNamepv2"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom|center_horizontal"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:text="Event name"
                                    android:ellipsize="end"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:maxLines="1"/>
                                <ImageView
                                    android:layout_margin="30dp"
                                    android:layout_gravity="top"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/lock"/>
                            </FrameLayout>

                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:visibility="visible"
        app:cardCornerRadius="0dp"
        android:id="@+id/sheet3"
        android:backgroundTint="#CDCDCD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainRecyclerviewdt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:visibility="visible"
        app:cardCornerRadius="0dp"
        android:id="@+id/addeventsheet"
        android:backgroundTint="#F6F6F6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/cancelEvent"
                        android:paddingTop="5dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="bottom"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/back"/>
                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Create Event"
                        android:fontFamily="@font/jost"
                        android:gravity="start|top"
                        android:textSize="26dp"
                        android:textColor="#527A74"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:boxStrokeColor="@color/selector3"
                    app:hintTextColor="#737272"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:textColorHint="#737272"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sd">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/title"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#737272"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:hint="Event Title"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:boxStrokeColor="@color/selector3"
                    app:hintTextColor="#737272"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:textColorHint="#737272"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sd">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/desc"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#737272"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:hint="Description"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputOuterFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:boxStrokeColor="@color/selector3"
                    app:hintTextColor="#737272"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    android:textColorHint="#737272"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sd">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/location"
                        style="@style/LoginTextInputInnerFieldStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#737272"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:hint="Location"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start date"
                            android:fontFamily="@font/jost"
                            android:textStyle="bold"
                            android:gravity="start|top"
                            android:textSize="16dp"
                            android:textColor="#527A74"/>

                        <LinearLayout
                            android:id="@+id/pickStartdate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/shape2"
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"/>
                            <TextView
                                android:id="@+id/Startdate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:text="Pick Date"
                                android:fontFamily="@font/jost"
                                android:textStyle="bold"
                                android:gravity="start|center_vertical"
                                android:textSize="18dp"
                                android:textColor="#527A74"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Start time"
                            android:fontFamily="@font/jost"
                            android:textStyle="bold"
                            android:gravity="start|top"
                            android:textSize="16dp"
                            android:textColor="#527A74"/>

                        <LinearLayout
                            android:id="@+id/pickStarttime"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/shape2"
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/clock"/>
                            <TextView
                                android:id="@+id/Starttime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:text="Pick Time"
                                android:fontFamily="@font/jost"
                                android:textStyle="bold"
                                android:gravity="start|center_vertical"
                                android:textSize="18dp"
                                android:textColor="#527A74"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="End date"
                            android:fontFamily="@font/jost"
                            android:textStyle="bold"
                            android:gravity="start|top"
                            android:textSize="16dp"
                            android:textColor="#527A74"/>

                        <LinearLayout
                            android:id="@+id/pickEnddate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/shape2"
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"/>
                            <TextView
                                android:id="@+id/Enddate"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:text="Pick Date"
                                android:fontFamily="@font/jost"
                                android:textStyle="bold"
                                android:gravity="start|center_vertical"
                                android:textSize="18dp"
                                android:textColor="#527A74"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="End time"
                            android:fontFamily="@font/jost"
                            android:textStyle="bold"
                            android:gravity="start|top"
                            android:textSize="16dp"
                            android:textColor="#527A74"/>

                        <LinearLayout
                            android:id="@+id/pickEndtime"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/shape2"
                            android:padding="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/clock"/>
                            <TextView
                                android:id="@+id/Endtime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:text="Pick Time"
                                android:fontFamily="@font/jost"
                                android:textStyle="bold"
                                android:gravity="start|center_vertical"
                                android:textSize="18dp"
                                android:textColor="#527A74"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Privacy"
                        android:fontFamily="@font/jost"
                        android:textStyle="bold"
                        android:gravity="start|top"
                        android:textSize="16dp"
                        android:textColor="#527A74"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/privacySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="Public    "
                            android:textColor="@color/black"
                            android:theme="@style/SCBSwitch"
                            android:thumb="@drawable/thumb"
                            app:track="@drawable/track"/>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/LoginTextInputOuterFieldStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="16dp"
                            app:boxStrokeColor="@color/selector3"
                            app:hintTextColor="#737272"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            android:textColorHint="#737272"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sd">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/eventCode"
                                android:visibility="gone"
                                style="@style/LoginTextInputInnerFieldStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="#737272"
                                android:textColor="@color/black"
                                android:textAllCaps="true"
                                android:hint="Event Code"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:fontFamily="@font/jost"
                        android:textStyle="bold"
                        android:gravity="start|top"
                        android:textSize="16dp"
                        android:textColor="#527A74"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/settingsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="Organizer    "
                            android:textColor="@color/black"
                            android:theme="@style/SCBSwitch"
                            android:thumb="@drawable/thumb"
                            app:track="@drawable/track"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setBg"
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/bg"
                        android:src="@drawable/bg"
                        android:layout_width="40dp"
                        android:scaleType="centerCrop"
                        android:layout_height="40dp"
                        android:layout_gravity="start|center_vertical"/>

                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Background"
                        android:fontFamily="@font/jost"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:textSize="18dp"
                        android:textColor="#527A74"/>
                </LinearLayout>

                <Button
                    android:id="@+id/createEvent"
                    android:layout_margin="30dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:text="Create"
                    android:backgroundTint="#D32C40"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>