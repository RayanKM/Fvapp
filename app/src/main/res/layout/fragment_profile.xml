<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BgStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/BgStyle"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more"
                android:layout_margin="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/more"
                android:layout_gravity="end"/>
            <ImageView
                android:id="@+id/ppgfp"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:src="@drawable/pfp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/shape"
                android:clipToOutline="true"
                android:layout_height="120dp"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    style="@style/TextViewStyle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:id="@+id/tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    style="@style/TextViewStyle"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:layout_marginStart="8dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/followers"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            style="@style/TextViewStyle"
                            android:textStyle="bold"
                            android:layout_height="0dp"
                            android:text=""
                            android:textSize="14sp"/>
                        <TextView
                            android:gravity="center|top"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Followers"
                            style="@style/TextViewStyle"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/following"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            style="@style/TextViewStyle"
                            android:textStyle="bold"
                            android:layout_height="0dp"
                            android:text=""
                            android:textSize="14sp"/>
                        <TextView
                            android:gravity="center|top"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            style="@style/TextViewStyle"
                            android:layout_weight="1"
                            android:text="Following"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/likes"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            style="@style/TextViewStyle"
                            android:layout_height="0dp"
                            android:text=""
                            android:textSize="14sp"/>
                        <TextView
                            android:gravity="center|top"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/TextViewStyle"
                            android:text="Likes"
                            android:textSize="10sp"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/TextViewStyle"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/snd"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:backgroundTint="#0073FF"
                    android:text="Send follow request"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/onit"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/posts"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#0073FF"
                        android:layout_height="wrap_content"
                        android:text="Posts"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/gallery"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:backgroundTint="#0073FF"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/filter"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/more"
                    android:layout_gravity="end"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#696666"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRecyclerview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>

        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:visibility="visible"
        app:cardCornerRadius="0dp"
        android:id="@+id/sheet2"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <ImageView
            android:id="@+id/down"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/dwn"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/mai"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="top"
            style="@style/BgStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape"
                        android:clipToOutline="true"
                        android:src="@drawable/pfp"
                        android:layout_gravity="start|center_vertical"/>
                    <TextView
                        android:id="@+id/edtpfp"
                        android:layout_width="match_parent"
                        style="@style/TextViewStyle"
                        android:layout_height="49dp"
                        android:text="Update Profile Picture"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#83C2C2C2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="16dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/bio" />
                    <TextView
                        android:id="@+id/edtbio"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:text="Edit Bio"
                        style="@style/TextViewStyle"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#83C2C2C2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape"
                        android:clipToOutline="true"
                        android:src="@drawable/dark"
                        android:layout_gravity="start|center_vertical"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        style="@style/TextViewStyle"
                        android:layout_gravity="center_vertical|start"
                        android:text="Enable Dark Mode  "
                        android:layout_marginStart="8dp"
                        android:checked="false" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#83C2C2C2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/logout"
                        android:layout_gravity="start|center_vertical"/>
                    <TextView
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        style="@style/TextViewStyle"
                        android:text="Logout"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#83C2C2C2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape"
                        android:clipToOutline="true"
                        android:src="@drawable/pfp"
                        android:layout_gravity="start|center_vertical"/>
                    <TextView
                        android:id="@+id/dltdata"
                        android:layout_width="match_parent"
                        style="@style/TextViewStyle"
                        android:layout_height="49dp"
                        android:text="Delete All Data"
                        android:gravity="start|center_vertical"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#83C2C2C2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape"
                        android:clipToOutline="true"
                        android:src="@drawable/pfp"
                        android:layout_gravity="start|center_vertical"/>
                    <TextView
                        android:id="@+id/dltmedia"
                        android:layout_width="match_parent"
                        style="@style/TextViewStyle"
                        android:layout_height="49dp"
                        android:text="Delete Media Data (Images and Videos)"
                        android:gravity="start|center_vertical"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#83C2C2C2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_margin="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape"
                        android:clipToOutline="true"
                        android:src="@drawable/pfp"
                        android:layout_gravity="start|center_vertical"/>
                    <TextView
                        android:id="@+id/dltacc"
                        android:layout_width="match_parent"
                        style="@style/TextViewStyle"
                        android:layout_height="49dp"
                        android:textStyle="bold"
                        android:text="Delete Account"
                        android:gravity="start|center_vertical"
                        android:textColor="#E30B0B"
                        android:textSize="15sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#83C2C2C2"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:background="#66000000"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="#DA0505"
            android:indeterminateBehavior="cycle"
            android:progress="0"
            />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>